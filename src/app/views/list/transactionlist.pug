table
    thead
        tr 
            th ID
            th Source
            th Name
            th Amount
            th Tag
            th Assign Tag
    tbody
        each trans in transactions
            tr
                td #{trans.id}
                td #{trans.source}
                td #{trans.name}
                td #{trans.amount}
                td #{trans.tag}
                td 
                    form(action="/tag")
                        input(name="tag")
                        input(name="transactionId" hidden=true value=trans.id) 
                        input(type="submit")